#include <stdio.h>
main()
{
    //1. Read the menu
    printf("Choose your order :\n1. Pizza,Rs 239\n2. Burger,Rs 129\n3. Pasta,Rs 179\n4. French fries,Rs 99\n5. Sandwich,Rs 149");
    //2. Read their order
    int order=0;
    scanf("%d",&order);
    //3. Display their order
    
    switch(order)
    {
        case 1:
        printf("Food item - Pizza\n\nPrice - Rs 239");
        break;
        case 2:
        printf("Food item - Burger\n\nPrice - Rs 129");
        break;
        case 3:
        printf("Food item - Pasta\n\nPrice - Rs 179");
        break;
        case 4:
        printf("Food item - French fries\n\nPrice - Rs 99");
        break;
        case 5:
        printf("Food item - Sandwich\n\nPrice - Rs 149");
    }
}
